{
  "name": "lit-ssr-edge",
  "version": "1.0.0",
  "description": "Server-side renderer for Lit web components targeting WinterTC-compatible runtimes",
  "license": "BSD-3-Clause",
  "author": "",
  "type": "module",
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./server-template.js": "./src/server-template.js",
    "./install-global-dom-shim.js": "./src/install-global-dom-shim.js",
    "./directives/index.js": "./src/directives/index.js"
  },
  "scripts": {
    "test": "npm run test:baseline && npm run test:lit-ssr-edge",
    "test:baseline": "TEST_IMPL=lit-ssr node --test test/integration/baseline/*.test.js",
    "test:lit-ssr-edge": "TEST_IMPL=lit-ssr-edge node --test test/unit/*.test.js test/integration/baseline/*.test.js test/integration/hydration/*.test.js test/integration/components/*.test.js test/integration/directives/*.test.js test/integration/streaming/*.test.js",
    "perf": "TEST_IMPL=lit-ssr node test/performance/render-performance.js",
    "perf:lit-ssr-edge": "TEST_IMPL=lit-ssr-edge node test/performance/render-performance.js",
    "perf:memory": "TEST_IMPL=lit-ssr node --expose-gc test/performance/memory-profile.js",
    "perf:memory:lit-ssr-edge": "TEST_IMPL=lit-ssr-edge node --expose-gc test/performance/memory-profile.js",
    "perf:compare": "node test/performance/compare.js"
  },
  "devDependencies": {
    "@lit-labs/ssr": "4.0.0",
    "@lit-labs/ssr-client": "1.1.8",
    "lit": "3.3.2"
  },
  "dependencies": {
    "@lit-labs/ssr-dom-shim": "1.5.1",
    "@parse5/tools": "0.7.0",
    "parse5": "8.0.0"
  }
}
