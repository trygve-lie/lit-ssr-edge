{
  "name": "lit-ssr-edge-cloudflare-worker-example",
  "version": "1.0.0",
  "description": "Example: lit-ssr-edge SSR on Cloudflare Workers (no nodejs_compat required)",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "esbuild worker.js --bundle --format=esm --outfile=dist/worker.js --platform=neutral --conditions=node --main-fields=module,main --target=es2022",
    "dev": "npm run build && wrangler dev",
    "deploy": "npm run build && wrangler deploy"
  },
  "dependencies": {
    "lit": "3.3.2",
    "lit-ssr-edge": "*"
  },
  "devDependencies": {
    "esbuild": "0.27.3",
    "wrangler": "4.68.0"
  }
}
