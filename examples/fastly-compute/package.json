{
  "name": "lit-ssr-edge-fastly-compute-example",
  "version": "1.0.0",
  "description": "Example: lit-ssr-edge SSR on Fastly Compute (SpiderMonkey + WASM)",
  "type": "module",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "prebuild": "mkdir -p dist bin",
    "build": "esbuild src/index.js --bundle --outfile=dist/bundle.js --format=esm --platform=browser --target=es2022 && js-compute-runtime dist/bundle.js bin/main.wasm",
    "start": "fastly compute serve",
    "deploy": "npm run build && fastly compute publish"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fastly/js-compute": "^3.33.2",
    "lit": "^3.0.0",
    "lit-ssr-edge": "file:../.."
  },
  "devDependencies": {
    "esbuild": "^0.21.0"
  }
}
