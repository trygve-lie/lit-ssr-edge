{
  "name": "lit-ssr-edge-fastly-compute-example",
  "version": "1.0.0",
  "description": "Example: lit-ssr-edge SSR on Fastly Compute (SpiderMonkey + WASM)",
  "type": "module",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "prebuild": "mkdir -p dist bin",
    "build": "node esbuild.config.js && js-compute-runtime dist/bundle.js bin/main.wasm",
    "start": "fastly compute serve",
    "deploy": "npm run build && fastly compute publish"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@fastly/js-compute": "3.40.0",
    "lit": "3.3.2",
    "lit-ssr-edge": "*"
  },
  "devDependencies": {
    "esbuild": "0.27.3"
  }
}
